<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/graden"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/r61dnwrugixc_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >
            <LinearLayout
                android:paddingTop="46dp"
                android:paddingBottom="11dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:id="@+id/ry98y2xq1j8"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/grid_round"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/rf7tx3ubrtc"
                        android:layout_width="149dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/pause"
                        android:layout_width="107dp"
                        android:layout_height="78dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/pause" />

                    <ImageView
                        android:id="@+id/parametres"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:src="@drawable/setings" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_level"
                    android:layout_width="318dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:background="#D044084E"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp">

                    <TextView
                        android:id="@+id/rnc8bz8r33p"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Level 1"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="40dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/rxb9zhrtcer"
                        android:layout_width="82dp"
                        android:layout_height="437dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/r0t1in7raj85"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:background="#D044084E"
                            android:orientation="vertical"
                            android:paddingVertical="5dp">

                            <TextView
                                android:id="@+id/r1wgl08urqsqh"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="SCORE"
                                android:textAlignment="center"
                                android:textColor="#fffdfd"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/scores2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="#D044084E"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingVertical="16dp">

                            <TextView
                                android:id="@+id/score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textColor="#fffdfd"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ruhhvovo7zop"
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:layout_marginBottom="15dp"
                            android:background="#D044084E"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/rxd77r92yaz"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginBottom="15dp"
                            android:background="#D044084E"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/treasure"></ImageView>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/r3lz10m2stru"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <GridLayout
                            android:id="@+id/board"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grid_round"
                            android:orientation="horizontal"
                            android:padding="-30dp"
                            android:radius="20dp" />
                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

